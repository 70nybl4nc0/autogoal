    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "docker-compose build"
        },
        {
            "label": "test",
            "type": "shell",
            "command": "docker-compose run autogoal make test",
            "problemMatcher": []
        },
        {
            "label": "shell",
            "type": "shell",
            "command": "docker-compose run autogoal bash"
        },
        {
            "label": "sync",
            "type": "shell",
            "command": "docker-compose run autogoal pipenv sync --dev"
        }
    ]
}
